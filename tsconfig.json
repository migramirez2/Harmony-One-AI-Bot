    "module": "CommonJS",
    "outDir": "dist",
    "types": ["node"],
    "lib": ["es2022"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "isolatedModules": true
  },
  "include": ["src/bot.ts", "environment.d.ts"],
  "exclude": ["node_modules"]
}
